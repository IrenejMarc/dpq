name "dpq"
description "A postgresql (libpq, pq) library aiming to be simple to use"
copyright "Copyright Â© 2016, Irenej Marc"
authors "Irenej"
targetType "library"
license "MIT"
targetPath "bin"
libs "pq" platform="linux"
libs "libpq" platform="windows"
lflags "-LIBPATH:C:/Program Files/PostgreSQL/15/lib/" platform="windows"
copyFiles \
	"C:/Program Files/PostgreSQL/15/lib/libpq.dll" \
	"C:/Program Files/PostgreSQL/15/bin/libintl-9.dll" \
	"C:/Program Files/PostgreSQL/15/bin/libssl-3-x64.dll" \
	"C:/Program Files/PostgreSQL/15/bin/libcrypto-3-x64.dll" \
	"C:/Program Files/PostgreSQL/15/bin/libwinpthread-1.dll" \
	"C:/Program Files/PostgreSQL/15/bin/libiconv-2.dll" platform="windows"
